<%- include('../partials/_head', { title: 'Iniciar sesión' }) %>
<div class="login-bg d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="card shadow-lg">
          <div class="card-body p-4">
            <h3 class="text-center mb-3">EduCare Pro</h3>
            <p class="text-muted text-center">Plataforma educativa tipo Canvas</p>

            <%- include('../partials/_flash') %>

            <form action="/login" method="POST">
              <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <input type="email" name="email" class="form-control" required placeholder="correo@ejemplo.com">
              </div>

              <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input type="password" name="password" class="form-control" required placeholder="••••••••">
              </div>

              <button class="btn btn-primary w-100">Entrar</button>
            </form>

            <hr>
            <p class="small text-muted mb-0">
              Usuarios demo:<br>
              Admin: admin@educare.com / 123456<br>
              Profesor: profesor@educare.com / 123456<br>
              Estudiante: estudiante@educare.com / 123456
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/_foot') %>
